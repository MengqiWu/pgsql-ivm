-- unsupport aggregation function except for SUM(),COUNT()
CREATE INCREMENTAL MATERIALIZED VIEW mv_ivm_min AS SELECT i, MIN(j)  FROM mv_base_a GROUP BY i;
ERROR:  Aggrege function min is not supported
